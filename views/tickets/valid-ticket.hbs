{{#block "style"}}
body {
  background: #2dc937;
  color: #333;
}
.event {
  font-size: 2rem;
  padding-bottom: 1.25rem;
}
.quantity {
  font-size: 2.5rem;
}
.email {
  padding-top: 2rem;
  font-size: 1.25rem;
}
{{/block}}

<p class="event">{{event.series}} {{event.title}}</p>
<p class="quantity">Admit {{ticket.quantity}}</p>
{{#if user}}<p class="email">Email: {{user.email}}</p>{{/if}}
