{{ assign "hide_home" true }}
{{#block "style" }}
article {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
body {
  background: yellow;
}
h1, h2 {
  padding: 0;
  margin: 0;
}
.main {
  margin: 0 auto;
}
.main h1 {
  font-size: 3rem;
}
.main h2 {
  margin-top: 0.5rem;
  margin-bottom: 2rem;
}
.event-details {
  font-size: 2rem;
  height: 7rem;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  line-height: 2rem;
}
.event-detail {
  display: block;
}
.event-time {
  background-color: #5accff;
  padding-left: 2px;
  padding-right: 5px;
}
.event-date {
  background-color: #f9f;
  padding: 2px 5px;
  line-height: 2em;
}
.main p {
  margin-top: 2rem;
}

.main-event {
  all: inherit;
  cursor: pointer;
}

.sign-up-form {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: start;
  margin-top: 5rem;
  margin-bottom: 1rem;
}
.email-label {
  display: none;
}

.email-input {
  flex-grow: 1;
  margin-right: 0.5rem;
  background: yellow;
  border: none;
  border-bottom: 2px solid #000;
}

.signup-button {
  background: #e9e9ed;
}

@media screen and (max-width: 600px) {
  .event-details {
    font-size: 1.5rem;
    height: 5.5rem;
  }
  article {
    margin: 0;
  }
}
{{/block}}
<div class="main">
  <a class="main-event" href="/events/2024-02-17-fieldtrip">
  <h1>Field Trip</h1>
  <h2>Hood Museum of Art</h2>
  <div class="event-details">
    <time class="event-detail">
      <span class="event-time">2pm&ndash;3pm</span></time>
    <span class="event-detail">Saturday, <span class="event-date">February 17, 2024</span></span>
    <span class="event-detail">Hood Museum of Art</span>
  </div>
  </a>
  <form class="sign-up-form" method="post" action="/events/signup">
    <label class="email-label" for="email">Email</label>
    <input class="email-input" name="email" required type="email" placeholder="coalbiter@email.com">
    <input type="hidden" name="event_id" value="6">

    <input class="signup-button" type="submit" value="Sign Up">
  </form>
</div>
